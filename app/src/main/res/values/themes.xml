<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- *changement de  action bar a non action bar -->
    <style name="Theme.SaveAnimals" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>  -->
        <!--  <item name="android:textColorPrimary">@android:color/white</item>  -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/ic_launcher_background</item>
        <item name="colorAccent">#DAA40F</item>
        <!-- Customize your theme here. -->
        <!-- *pour faire la translation -->
        <item name="android:windowContentTransitions">true</item>
        <!-- *hide title window and action bar -->
        <item name="windowNoTitle">true</item>
